/* SIMILAR.STYL ======================================= */

#similar
    background: colorBgGray
    color: colorDarkGray
    padding: 100px 0 50px 0
    margin-top: -50px

    .similar-row
        flexbox()
        flex-flow: row wrap

        &:last-child
            justify-content: space-around

    .container
        flexbox()
        flex-flow: column nowrap

    .similar__title
        font-size: 16px
        font-weight: 500
        margin-bottom: 20px
        margin-left: 10px





/* BOX ITEM */
.box-item
    flexbox()
    flex-flow: column nowrap
    width: 280px
    margin-bottom: 30px


    &__image
        width: 280px
        height: 170px
        overflow: hidden
        background: colorLighterGray

    &__title
        font-size: 30px
        font-weight: 600
        text-transform: capitalize
        color: colorGray1
        margin: 10px 0

    &__desc
        font-size: 12px
        font-weight: 600
        text-transform: uppercase
        color: colorLightGray

