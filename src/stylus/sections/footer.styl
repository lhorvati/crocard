/* FOOTER.STYL ======================================= */

#footer
    background: blueGradient
    color: colorWhite
    padding: 50px 0

    .footer-row
        flexbox()
        flex-flow: row nowrap
        justify-content: space-between
        margin-bottom: 30px

        &:last-child
            margin-bottom: 0
            justify-content: center

            a
                margin-right: 20px
                &:last-child
                    margin-right: 0


        .footer__copyright,
        .footer__created
            font-size: 12px
            font-weight: 400

            a:hover
                color: colorYellow

        .footer__nav
            ul
                flexbox()
                flex-flow: row nowrap
                justify-content: space-between

                li
                    margin-right: 30px

                    &:last-child
                        margin-right: 0

                    a
                        font-family: Roboto
                        color: colorWhite
                        font-weight: 400
                        font-size: 16px

                        &:hover
                            color: colorYellow

                    a.active
                        color: colorYellow

