/* MOBILE-NAV.STYL ======================================= */

.mobile-nav
    flexbox()

    .mobile-nav__menu
        width: 20px
        height: 20px
        background: url(image/other/mobile-menu.svg) center no-repeat
        background-size: 20px


    .mobile-nav__wrap
        position: absolute
        width: 80%
        height: 100%
        top: 0
        right: -100%
        background: blueGradient
        box-shadow(0 0 50px colorBlack)
        flexbox()
        align-items: center
        flex-flow: column nowrap
        padding: 50px 0
        transition(.5s)

        &.active
            right: 0


    .mobile-nav__close
        width: 20px
        height: 20px
        background: url(image/other/mobile-menu.svg) center no-repeat
        background-size: 20px
        transform: rotate(90deg)
        align-self: flex-end
        margin: 0 30px 30px 0

    .mobile-nav__list

        li
            margin-bottom: 20px

            &:last-child
                margin-top: 50px

            a
                color: colorWhite
                font-size: 20px
