%html(lang="en")
  %head
    %title Crocard - Location Details

    %meta(charset="UTF-8")
    %meta(name="keywords" content="Crocard")
    %meta(name="description" content="")
    %meta(name="author" content="horvaticluka@gmail.com")
    %meta(id="meta" name="viewport" content="width=device-width; initial-scale=1.0, maximum-scale=1.0")

    %link(rel="stylesheet" href="dist/main.css")
    %link(rel="stylesheet" href="dist/query.css")
    / Lightbox
    %link(rel="stylesheet" href="lightbox/css/lightbox.css")
    / Fonts
    %link(href="https://fonts.googleapis.com/css?family=Montserrat:500,700,900|Open+Sans|Raleway:400,500,900&subset=latin-ext" rel="stylesheet")/

    %script(type="text/javascript" src="js/script.js")

  %body

    / HEADER SECTION **************************************
    #header.section
      .container

        / MAIN NAVBAR
        .main-navbar
          .main-navbar__wrap
            .main-navbar__logo
              %a(href="index.html")
                %img(src="dist/image/crocard-logo.svg" alt="Crocard Logo")
            .main-navbar__search
              %input.search(type="text" placeholder="Search your location")

          .main-navbar__wrap
            %nav.main-navbar__nav
              %ul
                %li
                  %a.active(href="locations.html") Locations
                %li
                  %a(href="how-it-works.html") How it Works
                %li
                  %a(href="support.html") Support
                %li.ajme
                  %a.btn.btn--yellow(href="register.html") Sign In / Sign Up




    / DETAILS SECTION **************************************
    #details.section

      .section-row.details-header
        .container
          .details__small Dalmatia - Museums and national Parks
          .details__image

            .details-row
              .details__title
                %h1 Dubrovnik Walls
                %h3 Croatian Museums and national Parks

              .details__gallery
                .gallery-item
                .gallery-item
                .gallery-item


      .section-row.details-content
        .container

          .details-col
            .details__text
              Casual counter serve offering basic breakfast eats & simple lunch fare such salads, wraps & burgers. Description text. Casual counter serve offering basic breakfast eats & simple lunch fare such salads, wraps & burgers. Description text.
            .details__dropdown
              %span We have 36 locations over Croatia, select one!
              %select.locations
                %option Pula, East
                %option Pula, West
                %option Zagreb, East
                %option Zagreb, West
            .details__info
              .info-row
                .info__title CONTACT PHONE
                .info__desc +385 98 1787 888
              .info-row
                .info__title
                  OPEN HOURS
                  .info__open.info__open--yes Open Today
                  .info__open.info__open--no Closed Today
                .info__desc Friday 6:20 AM - 7:15PM
              .info-row.center
                .btn.btn--more View More


          .details-col
            .details__remaining
              .details__percent 40%
              .details__time Discounts are only avaliable from 11AM to 6PM.
            .details__access Remaining access to this discount: Unlimited
            .details__map





    / DOWNLOAD SECTION **************************************
    .container

      #download.section
        .download-row
          .download__text
            Download CroCard App and start your journey trough Croatia!
        .download-row
          %a(href="#")
            %img(src="dist/image/google-play.svg" alt="Google Play")
          %a(href="#")
            %img(src="dist/image/app-store.svg" alt="App Store")




